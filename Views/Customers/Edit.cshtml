@model stationary_shop.Models.Customers

@* this will also be used as page title in main layout *@
@{ ViewData["title"] = "Customer editing"; }

@* content header *@
<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Back to the list
		</a>
	</span>
</div>

@* content itself *@
<div class="main-content-ced">
@using( Html.BeginForm(FormMethod.Post, new { @class="entity-ce" }) )
{
	@Html.AntiForgeryToken()

	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	
	<fieldset>
		<div class="form-group">
			@Html.LabelFor(m => m.Id)
			@Html.EditorFor(m => m.Id, new { htmlAttributes = new { @readonly = "readonly" } })
			@Html.ValidationMessageFor(m => m.Id, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Name)
			@Html.EditorFor(m => m.Name)
			@Html.ValidationMessageFor(m => m.Name, "")
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Surname)
			@Html.EditorFor(m => m.Surname)
			@Html.ValidationMessageFor(m => m.Surname, "")
		</div>

        <div class="form-group">
			@Html.LabelFor(m => m.Mail)
			@Html.EditorFor(m => m.Mail)
			@Html.ValidationMessageFor(m => m.Mail, "")
		</div>

        <div class="form-group">
			@Html.LabelFor(m => m.PhoneNumber)
			@Html.EditorFor(m => m.PhoneNumber)
			@Html.ValidationMessageFor(m => m.PhoneNumber, "")
		</div>

        <div class="form-group">
			@Html.LabelFor(m => m.LoyaltyProgramMembership)
			@Html.EditorFor(m => m.LoyaltyProgramMembership)
			@Html.ValidationMessageFor(m => m.LoyaltyProgramMembership, "")
		</div>
	</fieldset>

	<div class="container-fluid d-flex d-row justify-content-end">
		<button name="save" value="1" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i> Save</button>
	</div>
}
</div>

@* content footer *@
<div class="main-content-footer">
	<span class="title"></span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Back to the list
		</a>
	</span>
</div>