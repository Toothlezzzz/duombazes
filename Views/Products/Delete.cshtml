@model stationary_shop.Models.Products

@* this will also be used as page title in main layout *@
@{ ViewData["title"] = "Product deletion"; }

@* content header *@
<div class="main-content-header">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Back to the list
		</a>
	</span>
</div>

@* content itself *@
<div class="main-content-ced">
@using( Html.BeginForm(FormMethod.Post, new { @class="entity-d" }) )
{
	@Html.AntiForgeryToken()

	<fieldset>
		<legend class="confirm-msg">Do you really want to remove this entity?</legend>

		<dl>
			<dt>@Html.DisplayNameFor(m => m.ID)</dt>
			<dd>@Html.DisplayFor(m => m.ID)</dd>

			<dt>@Html.DisplayNameFor(m => m.Name)</dt>
			<dd>@Html.DisplayFor(m => m.Name)</dd>

			<dt>@Html.DisplayNameFor(m => m.Description)</dt>
			<dd>@Html.DisplayFor(m => m.Description)</dd>

            <dt>@Html.DisplayNameFor(m => m.Price)</dt>
			<dd>@Html.DisplayFor(m => m.Price)</dd>

            <dt>@Html.DisplayNameFor(m => m.Category)</dt>
			<dd>@Html.DisplayFor(m => m.Category)</dd>

            <dt>@Html.DisplayNameFor(m => m.Brand)</dt>
			<dd>@Html.DisplayFor(m => m.Brand)</dd>

            <dt>@Html.DisplayNameFor(m => m.Size)</dt>
			<dd>@Html.DisplayFor(m => m.Size)</dd>
		</dl>

		@if( ViewData["deletionNotPermitted"] != null )
		{
			<div class="fail-msg">
				<i class="fa-solid fa-circle-exclamation"></i> This Product cannot be deleted.
			</div>
		}
		else
		{
			<div class="buttons">
				<button
					formaction="@Url.Action("DeleteConfirm", new {id = Model.ID})"
					class="btn btn-danger"
					style="white-space: nowrap;"
				><i class="fa-solid fa-trash"></i> Remove</button>
			</div>			
		}
	</fieldset>
}
</div>

@* content footer *@
<div class="main-content-footer">
	<span class="title"></span>
	<span class="actions">
		<a 
			href="@Url.Action("Index")" 
			class="btn btn-outline-primary btn-sm"
		>
			<i class="fa-solid fa-angles-left"></i> Back to the list
		</a>
	</span>
</div>